<BoxLayout>:
	padding: self.width*.05,self.height*.15
	spacing: self.width*.05
<RootWidget>:
	BoxLayout:
		orientation: 'vertical'
		BoxLayout:
			TextInput:
				id: codeInp
				text: ''
				font_size: self.height*.4
			Button:
				text: 'code'
				font_size: self.height*.4
				on_press: root.setScatterImage()
		BoxLayout:
			Label:
				id: cnt
				font_size: self.height*.6
				text: root.getCount()
			Button:
				text: 'count'
				font_size: self.height*.4
				on_press: root.incrementCount()
	FloatLayout:
		id: scatterslide
		Scatter:
			Image:
				id: scatterimg
				source: 'cat.png'
	BoxLayout:
		orientation: 'vertical'
		id: debugslide
		Label:
			text: 'debug data'
			font_size: 50
		BoxLayout:
			orientation: 'vertical'
			Label:
				text: 'App.get_running_app().user_data_dir = '+root.getUserDataDir()
			Label: 
				text: str('save file path = '+root.getSaveFilePath())
			ScrollView:
				Label:
					id: lblexp
					text: ''
			