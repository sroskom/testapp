<RootWidget>:
	BoxLayout:
		BoxLayout:
			Label:
				id: cnt
				font_size: 50
				text: root.getCount()
			Button:
				text: 'count'
				font_size: 50
				on_press: root.incrementCount()
	BoxLayout:
		TextInput:
			id: codeInp
			text: ''
			font_size: 50
		Button:
			text: 'ok'
			font_size: 50
			on_press: root.setScatterImage()
	FloatLayout:
		id: scatterslide
		Scatter:
			Image:
				id: scatterimg
				source: 'cat.png'
	BoxLayout:
		orientation: 'vertical'
		id: debugslide
		Label:
			text: 'debug data'
			font_size: 50
		Label:
			text: 'App.get_running_app().user_data_dir = '+root.getUserDataDir()
		Label: 
			text: str('save file path = '+root.getSaveFilePath())
		ScrollView:
			Label:
				id: lblexp
				text: ''
		