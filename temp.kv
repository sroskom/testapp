<RootWidget>:
	BoxLayout:
		BoxLayout:
			orientation: 'vertical'
			Label:
				id: cnt
				text: root.getCount()
			Button:
				text: 'count'
				on_press: root.incrementCount()
	FloatLayout:
		Scatter:
			Image:
				source: 'cat.png'
	BoxLayout:
		orientation: 'vertical'
		id: debugslide
		Label:
			text: 'debug data'
			font_size: 50
		Label:
			text: 'App.get_running_app().user_data_dir = '+root.getUserDataDir()
		Label: 
			text: str('save file path = '+root.getSaveFilePath())
		ScrollView:
			Label:
				id: lblexp
				text: ''
		